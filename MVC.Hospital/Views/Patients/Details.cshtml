@using Hospital.BL
@using Hospital.DAL
@model PatientDetailsVM


<div class="d-flex justify-content-center">
<div class="card mb-4 custom-bg-color col-5 ">
    <div class="card-header text-white">
        <h1 class="card-header text-center">Patient Details</h1>
    </div>
    <div class="card-body">
        <h4>Name: @Model.Name</h4>
        <h4>Doctor Name: @Model.Doctor.Name</h4>
        <h4>Number Of Issues: @Model.Issues.Count()</h4>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="card mb-3">
                <h2 class="card-header text-center">Issues Name</h2>
            </div>
            @foreach (var issue in Model.Issues)
            {
                <div class="card mb-3">
                    <div class="card-body">

                        <h5 class="card-title">@issue.Name</h5>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</div>

