@using Hospital.BL
@model DoctorAddVM


<div class="d-flex justify-content-center">
    <div class="col-4 border border-success border-3 bg-light border rounded-3">
        <form class="m-3" asp-action="Add" method="post">
            <div class="form-row">
                <div class="form-group  m-2">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="form-group  m-2">
                    <label asp-for="Specialization">Specialization</label>
                    <input asp-for="Specialization" class="form-control" />
                    <span asp-validation-for="Specialization" class="text-danger"></span>

                </div>
                <div class="form-group  m-2">
                    <label asp-for="Salary">Salary</label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>

                </div>

                <div class="form-group m-2">
                    <label asp-for="PerformanceRate">PerformanceRate</label>
                    <input asp-for="PerformanceRate" class="form-control"/>
                </div>

                <div class="d-flex justify-content-center m-5">
                    <button class="btn btn-success">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>









@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
